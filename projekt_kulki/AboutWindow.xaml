            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="40" Height="40" Canvas.Left="10" Canvas.Top="134" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="White" Offset="0.058"/>
                    <GradientStop Color="Yellow" Offset="0.467"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
